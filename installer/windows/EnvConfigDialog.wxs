<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <!-- Custom Dialog for .env configuration -->
    <UI Id="EnvConfigUI">
      <Dialog Id="EnvConfigDlg" Width="370" Height="270" Title="[ProductName] - Environment Configuration">
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes">
          <Text>{\WixUI_Font_Title}Environment Configuration</Text>
        </Control>

        <Control Id="Description" Type="Text" X="25" Y="23" Width="320" Height="40" Transparent="yes" NoPrefix="yes">
          <Text>Paste your .env file contents below. This file contains your API keys and configuration settings.</Text>
        </Control>

        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />

        <!-- Multi-line text box for .env contents -->
        <Control Id="EnvContentLabel" Type="Text" X="20" Y="70" Width="330" Height="10" NoPrefix="yes">
          <Text>Environment file contents (.env):</Text>
        </Control>

        <Control Id="EnvContentEdit" Type="Edit" X="20" Y="85" Width="330" Height="130" Property="ENV_FILE_CONTENT" Multiline="yes" />

        <!-- Navigation buttons -->
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
      </Dialog>
    </UI>

    <!-- Properties for the dialog -->
    <Property Id="ENV_FILE_CONTENT" />
  </Fragment>
</Wix>
